---
const token = Astro.cookies.get("token")?.value;
const isLoggedIn = !!token;

const steps = [
    {
        icon: "M12 6v6m0 0v6m0-6h6m-6 0H6",
        title: "Create an Account",
        description:
            "Sign up in less than a minute and get instant access to thousands of events.",
    },
    {
        icon: "M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z",
        title: "Find Events",
        description:
            "Browse through our curated collection of events or search for specific ones.",
    },
    {
        icon: "M3 10h18M7 15h1m4 0h1m-1-5h1m4 0h1m-9 5h.01M12 15h.01M16 10h.01M8 10h.01M7 10h10",
        title: "Book Your Spot",
        description:
            "Secure your spot with just a few clicks. No hidden fees, no hassle.",
    },
    {
        icon: "M5 13l4 4L19 7",
        title: "Enjoy the Event",
        description:
            "Get ready for an amazing experience. We'll handle the rest!",
    },
];
---

<section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
            <span class="inline-block text-sm font-semibold text-black mb-3"
                >PROCESS</span
            >
            <h2 class="text-4xl font-bold text-gray-900 mb-4">How It Works</h2>
            <p class="text-lg text-gray-500 max-w-3xl mx-auto mb-8">
                Getting started with EventEase is quick and easy. Follow these
                simple steps to join amazing events near you.
            </p>

            {
                !isLoggedIn && (
                    <a
                        href="/signup"
                        class="bg-black text-white hover:bg-gray-800 border-2 border-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] hover:shadow-[2px_2px_0px_0px_rgba(0,0,0,1)] hover:translate-y-0.5 transition-all font-bold uppercase tracking-wide inline-block px-6 py-3 mb-12 cursor-pointer"
                    >
                        Get Started Now
                    </a>
                )
            }
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
            {
                steps.map((step, index) => (
                    <div class="bg-white border-2 border-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] hover:shadow-[6px_6px_0px_0px_rgba(0,0,0,1)] hover:-translate-y-1 transition-all duration-300 p-6">
                        <div class="w-16 h-16 bg-black text-white rounded-full flex items-center justify-center mb-4 mx-auto text-2xl font-bold">
                            {index + 1}
                        </div>
                        <div class="text-center">
                            <div class="w-12 h-12 bg-gray-100 border-2 border-black flex items-center justify-center mb-4 mx-auto">
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    class="h-6 w-6 text-black"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d={step.icon}
                                    />
                                </svg>
                            </div>
                            <h3 class="text-xl font-bold text-gray-900 mb-2">
                                {step.title}
                            </h3>
                            <p class="text-gray-600">{step.description}</p>
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</section>
