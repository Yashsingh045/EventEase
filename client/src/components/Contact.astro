<section id="contact" class="py-16 md:py-24 bg-gray-50">
    <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-16">
            <div class="lg:sticky lg:top-24 self-start">
                <h2
                    class="font-serif text-4xl md:text-5xl font-bold mb-4 bg-linear-to-r from-blue-500 to-blue-800 bg-clip-text text-transparent"
                >
                    We'd Love to Hear from You
                </h2>
                <p
                    class="text-lg md:text-xl text-gray-600 leading-relaxed mb-8"
                >
                    Got a question? Want to share feedback? Or just want to say
                    hi? Drop us a message and our friendly team will get back to
                    you soon!
                </p>

                <div class="space-y-6">
                    <div class="flex gap-4 items-start">
                        <div
                            class="w-14 h-14 shrink-0 flex items-center justify-center bg-blue-100 border-2 border-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] rounded-none"
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                class="h-7 w-7 text-blue-700"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke="currentColor"
                            >
                                <path
                                    stroke-linecap="square"
                                    stroke-linejoin="miter"
                                    stroke-width="2"
                                    d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                                ></path>
                            </svg>
                        </div>
                        <div>
                            <h3
                                class="text-lg font-semibold text-gray-900 mb-1"
                            >
                                Email Us
                            </h3>
                            <a
                                href="mailto:hello@eventease.com"
                                class="text-blue-600 hover:text-blue-700 font-medium hover:underline"
                            >
                                hello@eventease.com
                            </a>
                        </div>
                    </div>
                    <div class="flex gap-4 items-start">
                        <div
                            class="w-14 h-14 shrink-0 flex items-center justify-center bg-green-100 border-2 border-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] rounded-none"
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                class="h-7 w-7 text-green-700"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke="currentColor"
                            >
                                <path
                                    stroke-linecap="square"
                                    stroke-linejoin="miter"
                                    stroke-width="2"
                                    d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                                ></path>
                            </svg>
                        </div>
                        <div>
                            <h3
                                class="text-lg font-semibold text-gray-900 mb-1"
                            >
                                Give Us a Ring
                            </h3>
                            <a
                                href="tel:+919876543210"
                                class="text-blue-600 hover:text-blue-700 font-medium hover:underline"
                            >
                                +91 9876543210
                            </a>
                        </div>
                    </div>
                    <div class="flex gap-4 items-start">
                        <div
                            class="w-14 h-14 shrink-0 flex items-center justify-center bg-purple-100 border-2 border-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] rounded-none"
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                class="h-7 w-7 text-purple-700"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke="currentColor"
                            >
                                <path
                                    stroke-linecap="square"
                                    stroke-linejoin="miter"
                                    stroke-width="2"
                                    d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                                ></path>
                                <path
                                    stroke-linecap="square"
                                    stroke-linejoin="miter"
                                    stroke-width="2"
                                    d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                            </svg>
                        </div>
                        <div>
                            <h3
                                class="text-lg font-semibold text-gray-900 mb-1"
                            >
                                Come Visit
                            </h3>
                            <p class="text-gray-600">
                                Pune, Maharashtra, India
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            <div
                class="card bg-white border-2 border-black shadow-[8px_8px_0px_0px_rgba(0,0,0,1)] rounded-none"
            >
                <div class="card-body">
                    <form id="contactForm" class="space-y-6">
                        <div class="form-control">
                            <label for="name" class="label">
                                <span
                                    class="label-text font-semibold text-gray-900"
                                    >Full Name</span
                                >
                            </label>
                            <input
                                type="text"
                                id="name"
                                name="name"
                                class="input input-bordered w-full focus:input-primary border-2 border-black rounded-none focus:outline-none focus:shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] font-bold"
                                placeholder="John Doe"
                                required
                            />
                        </div>

                        <div class="form-control">
                            <label for="email" class="label">
                                <span
                                    class="label-text font-semibold text-gray-900"
                                    >Email Address</span
                                >
                            </label>
                            <input
                                type="email"
                                id="email"
                                name="email"
                                class="input input-bordered w-full focus:input-primary border-2 border-black rounded-none focus:outline-none focus:shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] font-bold"
                                placeholder="john@example.com"
                                required
                            />
                        </div>

                        <div class="form-control">
                            <label for="subject" class="label">
                                <span
                                    class="label-text font-semibold text-gray-900"
                                    >Subject</span
                                >
                            </label>
                            <input
                                type="text"
                                id="subject"
                                name="subject"
                                class="input input-bordered w-full focus:input-primary border-2 border-black rounded-none focus:outline-none focus:shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] font-bold"
                                placeholder="How can we help?"
                                required
                            />
                        </div>

                        <div class="form-control">
                            <label for="message" class="label">
                                <span
                                    class="label-text font-semibold text-gray-900"
                                    >Message</span
                                >
                            </label>
                            <textarea
                                id="message"
                                name="message"
                                class="textarea textarea-bordered w-full h-32 focus:textarea-primary resize-y border-2 border-black rounded-none focus:outline-none focus:shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] font-bold"
                                placeholder="Tell us more about your inquiry..."
                                required></textarea>
                        </div>

                        <button
                            type="submit"
                            class="btn bg-black text-white hover:bg-gray-800 border-2 border-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] hover:shadow-[2px_2px_0px_0px_rgba(0,0,0,1)] hover:translate-y-[2px] transition-all font-bold uppercase tracking-wide rounded-none w-full text-lg"
                        >
                            Send Message
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

