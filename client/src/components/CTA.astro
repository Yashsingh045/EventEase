---
const token = Astro.cookies.get("token")?.value;
const isLoggedIn = !!token;
---

<section
    class="relative py-16 md:py-24 bg-gradient-to-br from-blue-600 to-blue-900 overflow-hidden"
>
    <div
        class="absolute inset-0 bg-[radial-gradient(circle_at_20%_50%,rgba(255,255,255,0.1)_0%,transparent_50%),radial-gradient(circle_at_80%_20%,rgba(255,255,255,0.05)_0%,transparent_50%)] pointer-events-none"
    >
    </div>

    <div class="container mx-auto px-4">
        <div class="relative z-10 text-center max-w-4xl mx-auto py-8">
            <h2
                class="font-serif text-4xl md:text-5xl font-bold text-white mb-6 drop-shadow-lg"
            >
                Let's Create Something Amazing Together
            </h2>
            <p class="text-xl md:text-2xl text-white/95 mb-10 leading-relaxed">
                Join our community of passionate event creators who are making
                every gathering special. We're here to help you succeed, every
                step of the way.
            </p>
            <div
                class="flex flex-col sm:flex-row gap-4 justify-center items-center"
            >
                {
                    isLoggedIn ? (
                        <a
                            href="/exploreEvents"
                            class="btn btn-lg bg-white text-blue-600 hover:bg-gray-50 border-2 border-black font-bold px-8 shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] hover:shadow-[2px_2px_0px_0px_rgba(0,0,0,1)] hover:translate-y-[2px] transition-all w-full sm:w-auto rounded-none uppercase tracking-wide"
                        >
                            Let's Explore Events
                        </a>
                    ) : (
                        <a
                            href="/signup"
                            class="btn btn-lg bg-white text-blue-600 hover:bg-gray-50 border-2 border-black font-bold px-8 shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] hover:shadow-[2px_2px_0px_0px_rgba(0,0,0,1)] hover:translate-y-[2px] transition-all w-full sm:w-auto rounded-none uppercase tracking-wide"
                        >
                            Get Started for Free
                        </a>
                    )
                }
                <a
                    href="#contact"
                    class="btn btn-lg btn-outline border-2 border-white text-white hover:bg-white/10 hover:border-white font-bold px-8 shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] hover:shadow-[2px_2px_0px_0px_rgba(0,0,0,1)] hover:translate-y-[2px] transition-all w-full sm:w-auto rounded-none uppercase tracking-wide"
                >
                    Chat with Us
                </a>
            </div>
        </div>
    </div>
</section>
