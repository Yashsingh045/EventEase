</Layout>

<script>
    import api from "../lib/api";
    import { checkAuth } from "../lib/auth";

    document.addEventListener("DOMContentLoaded", async () => {
        const sections = document.querySelectorAll(".dashboard-section");
        const navButtons = {
            overview: document.querySelector('a[href="/organiser"]'),
            events: document.getElementById("nav-events"),
            create: document.getElementById("nav-create"),
            attendees: document.getElementById("nav-attendees"),
        };

        function showSection(sectionId: string) {
            document
                .querySelectorAll(".dashboard-section")
                .forEach((el) => el.classList.add("hidden"));
            document
                .getElementById(`section-${sectionId}`)
                ?.classList.remove("hidden");

            document.querySelectorAll(".nav-link").forEach((link) => {
                link.classList.remove("active");
                if (link.getAttribute("data-page") === sectionId) {
                    link.classList.add("active");
                }
            });
        }

        navButtons.events?.addEventListener("click", () => {
            showSection("events");
            loadMyEvents();
        });
        navButtons.create?.addEventListener("click", () =>
            showSection("create"),
        );
        navButtons.attendees?.addEventListener("click", () => {
            showSection("attendees");
            loadEventSelect();
        });

        const user = await checkAuth();
        if (!user) {
            window.location.href = "/login";
            return;
        }

        const orgInitials = document.getElementById("org-sidebar-initials");
        const orgName = document.getElementById("org-sidebar-name");
        const orgEmail = document.getElementById("org-sidebar-email");

        if (orgName) orgName.textContent = `${user.firstName} ${user.lastName}`;
        if (orgEmail) orgEmail.textContent = user.email;
        if (orgInitials) {
            const initials =
                `${user.firstName?.[0] || ""}${user.lastName?.[0] || ""}`.toUpperCase();
            orgInitials.textContent = initials;
        }

        const userDashboardLink = document.getElementById("userDashboardLink");
        if (userDashboardLink) {
            if (user.role === "BOTH") {
                userDashboardLink.classList.remove("hidden");
            }
        }

        const createForm = document.getElementById(
            "createEventForm",
        ) as HTMLFormElement;
        const cancelCreateBtn = document.getElementById("cancelCreate");

        cancelCreateBtn?.addEventListener("click", () => {
            createForm.reset();
            showSection("overview");
        });

        createForm?.addEventListener("submit", async (e) => {
            e.preventDefault();
            const formData = new FormData(createForm);
            const data: any = Object.fromEntries(formData.entries());

            data.organizer = user.id;
            data.price = parseFloat(data.price);
            data.capacity = parseInt(data.capacity);
            if (data.prizePool) data.prizePool = parseFloat(data.prizePool);

            const baseDate = data.date;
            data.date = new Date(baseDate).toISOString();
            data.startTime = new Date(
                `${baseDate}T${data.startTime}`,
            ).toISOString();
            data.endTime = new Date(
                `${baseDate}T${data.endTime}`,
            ).toISOString();

            try {
                const res = await api.post("/api/events/createEvent", data);
                if (res.status === 201 || res.status === 200) {
                    alert("Event created successfully!");
                    createForm.reset();
                    showSection("events");
                    loadMyEvents();
                }
            } catch (error) {
                console.error("Error creating event:", error);
                alert("Failed to create event. Please try again.");
            }
        });

        async function loadDashboardData() {
            try {
                const eventsRes = await api.get("/api/events");
                const allEvents = eventsRes.data.events || [];

                const myEvents = allEvents.filter(
                    (event: any) => event.organizerId === user.id,
                );

                const totalEvents = myEvents.length;
                const activeEvents = myEvents.filter(
                    (event: any) => new Date(event.date) > new Date(),
                ).length;
                const totalRegistrations = 0;

                const statTotal = document.getElementById("stat-total-events");
                if (statTotal) statTotal.textContent = totalEvents.toString();

                const statActive =
                    document.getElementById("stat-active-events");
                if (statActive)
                    statActive.textContent = activeEvents.toString();

                const statReg = document.getElementById(
                    "stat-total-registrations",
                );
                if (statReg)
                    statReg.textContent = totalRegistrations.toString();

                const recentEventsBody =
                    document.getElementById("recent-events-body");
                if (recentEventsBody) {
                    recentEventsBody.innerHTML = "";
                    if (myEvents.length === 0) {
                        recentEventsBody.innerHTML = `
                            <tr>
                                <td colspan="5" class="px-6 py-8 text-center text-gray-500">
                                    No events found. Create your first event!
                                </td>
                            </tr>
                        `;
                    } else {
                        myEvents.slice(0, 5).forEach((event: any) => {
                            const date = new Date(
                                event.date,
                            ).toLocaleDateString();
                            const status =
                                new Date(event.date) > new Date()
                                    ? '<span class="px-2 py-1 text-xs font-medium text-green-700 bg-green-100 rounded-full">Active</span>'
                                    : '<span class="px-2 py-1 text-xs font-medium text-gray-700 bg-gray-100 rounded-full">Past</span>';

                            const row = `
                                <tr class="hover:bg-gray-50 transition-colors">
                                    <td class="px-6 py-4 font-medium text-gray-900">${event.title}</td>
                                    <td class="px-6 py-4 text-gray-500">${date}</td>
                                    <td class="px-6 py-4">${status}</td>
                                    <td class="px-6 py-4 text-gray-500">0</td>
                                    <td class="px-6 py-4">
                                        <button class="text-blue-600 hover:text-blue-800 font-medium text-sm">Edit</button>
                                    </td>
                                </tr>
                            `;
                            recentEventsBody.innerHTML += row;
                        });
                    }
                }

                const grid = document.getElementById("events-grid");
                if (grid) {
                    grid.innerHTML = "";
                    if (myEvents.length === 0) {
                        grid.innerHTML = `
                            <div class="col-span-full flex flex-col items-center justify-center py-12 text-center">
                                <div class="bg-gray-100 p-4 rounded-full mb-4 border-2 border-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)]">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                    </svg>
                                </div>
                                <h3 class="text-lg font-black text-gray-900 mb-2">No Events Created</h3>
                                <p class="text-gray-500 mb-6 font-bold">Get started by creating your first event.</p>
                                <button
                                    onclick="document.getElementById('nav-create').click()"
                                    class="btn btn-primary bg-blue-600 hover:bg-blue-700 border-2 border-black text-white font-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] hover:translate-y-px hover:shadow-[2px_2px_0px_0px_rgba(0,0,0,1)] transition-all uppercase"
                                >
                                    Create Event
                                </button>
                            </div>
                        `;
                    } else {
                        myEvents.forEach((evt) => {
                            const date = new Date(
                                evt.date,
                            ).toLocaleDateString();
                            const card = `
                                <div class="bg-white border-2 border-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] overflow-hidden hover:translate-y-[-2px] hover:shadow-[6px_6px_0px_0px_rgba(0,0,0,1)] transition-all">
                                    <div class="h-40 bg-gray-200 relative border-b-2 border-black">
                                        ${evt.posterUrl ? `<img src="${evt.posterUrl}" class="w-full h-full object-cover" alt="${evt.title}">` : '<div class="w-full h-full flex items-center justify-center text-gray-400 font-bold">No Image</div>'}
                                        <div class="absolute top-2 right-2">
                                            <span class="bg-white border-2 border-black px-2 py-1 text-xs font-black uppercase tracking-wide shadow-sm">
                                                ${evt.category}
                                            </span>
                                        </div>
                                    </div>
                                    <div class="p-5">
                                        <h3 class="font-black text-lg text-gray-900 mb-1 truncate uppercase tracking-tight">${evt.title}</h3>
                                        <p class="text-sm text-gray-600 mb-4 flex items-center gap-1 font-bold">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                            </svg>
                                            ${date}
                                        </p>
                                        <div class="flex justify-between items-center">
                                            <span class="text-sm font-black text-blue-600">${evt.price > 0 ? `$${evt.price}` : "Free"}</span>
                                            <button class="btn btn-sm btn-outline border-2 border-black hover:bg-black hover:text-white text-black font-bold uppercase text-xs">Manage</button>
                                        </div>
                                    </div>
                                </div>
                            `;
                            grid.innerHTML += card;
                        });
                    }
                }
            } catch (error) {
                console.error("Error loading dashboard data:", error);
            }
        }

        function renderEventsGrid(events: any[]) {
            const grid = document.getElementById("events-grid");
            if (!grid) return;

            grid.innerHTML = "";
            if (events.length === 0) {
                grid.innerHTML =
                    '<p class="col-span-full text-center text-gray-500 py-8">No events found.</p>';
                return;
            }

            events.forEach((evt) => {
                const date = new Date(evt.date).toLocaleDateString();
                const card = `
                    <div class="bg-white border-2 border-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] overflow-hidden hover:translate-y-[-2px] hover:shadow-[6px_6px_0px_0px_rgba(0,0,0,1)] transition-all">
                        <div class="h-40 bg-gray-200 relative border-b-2 border-black">
                            ${evt.posterUrl ? `<img src="${evt.posterUrl}" class="w-full h-full object-cover" alt="${evt.title}">` : '<div class="w-full h-full flex items-center justify-center text-gray-400 font-bold">No Image</div>'}
                            <div class="absolute top-2 right-2">
                                <span class="bg-white border-2 border-black px-2 py-1 text-xs font-black uppercase tracking-wide shadow-sm">
                                    ${evt.category}
                                </span>
                            </div>
                        </div>
                        <div class="p-5">
                            <h3 class="font-black text-lg text-gray-900 mb-1 truncate uppercase tracking-tight">${evt.title}</h3>
                            <p class="text-sm text-gray-600 mb-4 flex items-center gap-1 font-bold">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                </svg>
                                ${date}
                            </p>
                            <div class="flex justify-between items-center">
                                <span class="text-sm font-black text-blue-600">${evt.price > 0 ? `$${evt.price}` : "Free"}</span>
                                <button class="btn btn-sm btn-outline border-2 border-black hover:bg-black hover:text-white text-black font-bold uppercase text-xs">Manage</button>
                            </div>
                        </div>
                    </div>
                `;
                grid.innerHTML += card;
            });
        }

        async function loadMyEvents() {
            loadDashboardData();
        }

        async function loadEventSelect() {
            const eventsRes = await api.get("/api/events");
            const allEvents = eventsRes.data.events || [];
            const myEvents = allEvents.filter(
                (event: any) => event.organizerId === user.id,
            );

            const select = document.getElementById(
                "attendeeEventSelect",
            ) as HTMLSelectElement;
            if (select) {
                select.innerHTML =
                    "<option disabled selected>Choose an event</option>";
                myEvents.forEach((event: any) => {
                    const option = document.createElement("option");
                    option.value = event.id;
                    option.textContent = event.title;
                    select.appendChild(option);
                });

                select.onchange = (e) => {
                    const eventId = (e.target as HTMLSelectElement).value;
                    loadAttendees(eventId);
                };
            }
        }

        async function loadAttendees(eventId: string) {
            const list = document.getElementById("attendeesList");
            const tbody = document.getElementById("attendeesTableBody");
            if (list) list.classList.remove("hidden");
            if (tbody) {
                tbody.innerHTML =
                    '<tr><td colspan="4" class="text-center py-4">Loading...</td></tr>';

                try {
                    const res = await api.get(
                        `/api/registration/registrations/${eventId}`,
                    );
                    const registrations = res.data.registrations || [];

                    tbody.innerHTML = "";
                    if (registrations.length === 0) {
                        tbody.innerHTML =
                            '<tr><td colspan="4" class="text-center py-4 text-gray-500">No attendees found.</td></tr>';
                    } else {
                        registrations.forEach((reg: any) => {
                            const user = reg.user;
                            const statusClass = reg.checkedIn
                                ? "text-green-600 bg-green-50"
                                : "text-yellow-600 bg-yellow-50";
                            const statusText = reg.checkedIn
                                ? "Checked In"
                                : "Registered";

                            const row = `
                                <tr class="hover:bg-gray-50">
                                    <td class="px-4 py-3">
                                        <div class="flex items-center gap-3">
                                            <div class="avatar placeholder">
                                                <div class="bg-neutral-focus text-neutral-content rounded-full w-8 h-8 flex items-center justify-center bg-gray-200 text-xs font-bold">
                                                    ${user.firstName?.[0] || "U"}${user.lastName?.[0] || ""}
                                                </div>
                                            </div>
                                            <div>
                                                <div class="font-bold">${user.firstName} ${user.lastName}</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="px-4 py-3 text-sm">${user.email}</td>
                                    <td class="px-4 py-3 text-sm">Standard</td> <!-- Ticket type placeholder -->
                                    <td class="px-4 py-3">
                                        <span class="px-2 py-1 rounded-full text-xs font-medium ${statusClass}">
                                            ${statusText}
                                        </span>
                                    </td>
                                </tr>
                            `;
                            tbody.innerHTML += row;
                        });
                    }
                } catch (error) {
                    console.error("Error loading attendees:", error);
                    tbody.innerHTML =
                        '<tr><td colspan="4" class="text-center py-4 text-red-500">Error loading attendees.</td></tr>';
                }
            }
        }

        loadDashboardData();
    });
</script>
