                <div id="section-events" class="dashboard-section hidden">
                    <div class="flex justify-between items-center mb-8">
                        <h1 class="text-3xl font-bold text-gray-900">
                            My Events
                        </h1>
                        <button
                            class="btn btn-primary bg-blue-600 hover:bg-blue-700 border-2 border-black text-white font-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] hover:translate-y-px hover:shadow-[2px_2px_0px_0px_rgba(0,0,0,1)] transition-all uppercase"
                            onclick="document.getElementById('nav-create').click()"
                            >Create New Event</button
                        >
                    </div>
                    <div
                        id="events-grid"
                        class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6"
                    >
                        <!-- Events will be loaded here -->
                    </div>
                </div>

                <div id="section-create" class="dashboard-section hidden">
                    <h1 class="text-3xl font-bold text-gray-900 mb-8">
                        Create New Event
                    </h1>
                    <div
                        class="bg-white border-2 border-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] p-8 max-w-3xl"
                    >
                        <EventForm />
                    </div>
                </div>

                <div id="section-attendees" class="dashboard-section hidden">
                    <h1 class="text-3xl font-bold text-gray-900 mb-8">
                        Attendees
                    </h1>
                    <div
                        class="bg-white border-2 border-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] p-8"
                    >
                        <p class="text-gray-500">
                            Select an event to view attendees.
                        </p>
                        <select
                            id="attendeeEventSelect"
                            class="select select-bordered w-full max-w-xs mt-4 border-2 border-black focus:outline-none focus:ring-0 focus:border-blue-600 font-bold"
                        >
                            <option disabled selected>Choose an event</option>
                        </select>

                        <div id="attendeesList" class="mt-8 hidden">
                            <h3 class="font-bold text-lg mb-4">
                                Registered Attendees
                            </h3>
                            <div class="overflow-x-auto">
